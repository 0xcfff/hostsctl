    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package - List",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/hostsctl",
            "args": ["alias", "list", "-o", "text"]
        },
        {
            "name": "Launch Package - Add",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/hostsctl",
            "args": ["alias", "add", "127.0.0.1", "test.my.local", "#", "test", "--", "a", "b", "c"]
        },
        {
            "name": "Launch Package - Delete",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/hostsctl",
            "args": ["alias", "delete", "ff02::2"]
        }
    ]
}